# Database Configuration
DATABASE_URL=postgresql://postgres:5432@localhost:5432/cleanhome
DB_NAME=cleanhome
DB_USER=postgres
DB_PASSWORD=5432
DB_HOST=localhost
DB_PORT=5432

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Security
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=1800  # 30 minutes
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# CORS
# Frontend Vite chạy trên port 5173, không phải 3000  
CORS_ORIGINS=http://localhost:5173


# File Upload
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB


# Rate Limiting
RATELIMIT_DEFAULT=1000 per day;100 per hour;10 per minute

